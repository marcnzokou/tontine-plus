{
    "env": {
        "browser": true,
        "es6": true,
        "jasmine": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "plugins": [
        "react",
        "import"
    ],
    "rules": {
        "quotes": [2, "single"],
        "strict": [2, "never"],
        "no-debugger": 2,
        "no-console": [2, { "allow": ["warn", "error", "log"] }],
        "no-const-assign": 2,
        "no-unused-vars": 2,
        "prefer-const": 2,
        "semi": 2,
        //react
        "react/jsx-key": 2,
        "react/jsx-no-bind": 1,
        "react/jsx-no-duplicate-props": 2,
        "react/jsx-no-undef": 2,
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/no-direct-mutation-state": 2,
        "react/react-in-jsx-scope": 2,
        "react/self-closing-comp": 2,
        // import
        "import/named": 2,
        "import/default": 2,
        "import/namespace": 2,
        "import/no-mutable-exports": 2,
        "import/no-named-as-default": 1,
        "import/no-extraneous-dependencies": 2,
        "import/first": 2,
        "import/no-duplicates": 2,
        "import/extensions": 2,
        "import/no-named-default": 2
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js",".jsx"]
          }
        }
    }
}